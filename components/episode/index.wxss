.container {
    display: inline-flex;
    flex-direction: row;
    align-items: flex-end;
    margin-left: 20rpx;
    margin-top: 4rpx;
}

.index-container {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.plain {
    font-size: 32rpx;
    line-height: 32rpx;
}

.index {
    font-size: 60rpx;
    line-height: 60rpx;
    font-weight: 800;
    padding-right: 14rpx;
}

.separator {
    height: 44rpx;
    margin-right: 14rpx;
    border-right: 1rpx solid #000;
}

.date-container {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-bottom: 3rpx;
}

.month {
    line-height: 24rpx;    
    font-size: 24rpx;
}

.year {
    font-size: 20rpx;
}
