.post-model-container {
    position: fixed;
    bottom: 0;
    left: 0;
    top: 0;
    right: 0;
}

.post-model-container .model-overlay {
    position: relative;
    width: 100%;
    height: 100%;
    display: block;
    background-color: #000;
    opacity: 0;
    z-index: 999;
}

.post-model {
    /* 必须设置,否则z-index出错 */
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    background: #fff;
    z-index: 1000;
}

.model-pos {
    -webkit-transform: translateY(100%);
    transform: translateY(100%);
}

.post-model .header {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px #eeeeee;
}

.post-model .content {
    padding: 26rpx 24rpx;
}