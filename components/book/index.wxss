/* box type book */
.box-container {
    width: 240rpx;
    height: 360rpx;
    display: flex;
    flex-direction: column;
    position: relative;
    box-shadow: 2px 3px 5px #f0f0f0;
}

.box-container .image {
    width: 100%;
    height: 100%;
    border-radius: 2px;
}

.box-container .description {
    width: 216rpx;
    position: absolute;
    bottom: 0;
    background: #fff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    border-bottom-left-radius: 2px;
    border-bottom-right-radius: 2px;
}

.box-container .title {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.box-container .author {
    font-size: 20rpx;
    color: #999999;
    margin-bottom: 15rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.box-container .footer {
    margin: 10rpx 10rpx;
    font-size: 20rpx;
    color: #666666;
    text-align: right;
}

/* list type book */
.list-container {
    display: flex;
    flex-direction: row;
}

.list-container .image {
    width: 100rpx;
    height: 150rpx;
    border-radius: 4rpx;
}

.list-container .description {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
    font-weight: 500;
    color: #999999;
    font-size: 24rpx;
}

