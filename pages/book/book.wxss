.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    background: #f9f9f9;
}

.header {
    position: fixed;
    width: 100%;
    height: 104rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background: #fff;
    z-index: 1000;
}

.search_box {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    font-size: 28rpx;
    color: #989898;
    padding: 16rpx;
    margin: 0 30rpx;
    background: #f9f9f9;
    border-radius: 36rpx;
}

.icon {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.sub_container {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 104rpx;
}

.category_title {
    width: 100%;
    text-align: center;
    font-size: 38rpx;
    padding: 26rpx 0;
}

.books_wrapper {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 0 90rpx;
}

.book {
    margin-bottom: 60rpx;
}