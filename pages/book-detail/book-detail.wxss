.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 40rpx 104rpx;
}

.lg_title {
  font-weight: 600;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.header>image {
  width: 200rpx;
  height: 300rpx;
  border-radius: 8rpx;
  box-shadow: 0px 0px 8px 6px #f0f0f0;
  flex-shrink: 0;
}

.header>.main {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

.main>.title {
  font-size: 44rpx;
  font-weight: 600;
}

.main>.detail {
  font-size: 24rpx;
  margin-top: 16rpx;
}

.summary {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.summary>.main {
  font-size: 30rpx;
  font-weight: 500;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  text-indent: 56rpx;
}

.comments {
  margin-top: 20rpx;
}

.comments>.main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.comments c-tag {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.comments>.main>c-tag:nth-child(1)>view {
  background: #fefae0;
}

.comments>.main>c-tag:nth-child(2)>view {
  background: #f1fafe;
}

.comments .fav_nums {
  font-size: 22rpx;
  margin-left: 16rpx;
  color: #bbbbbb;
}

/* .post-container */

.post-container {
  position: fixed;
  height: 100rpx;
  width: 100%;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0px -3px 8px #f0f0f0;
  border-top: 1px solid #f0f0f0;
  background: #fff;
}

.post-container .wrapper {
  width: 400rpx;
  font-size: 28rpx;
  color: #737273;
  padding: 10rpx 0;
  border: 1px solid #737273;
  border-radius: 48rpx;
  margin-left: 20rpx;
}

.post-container .wrapper>.post {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
  margin-left: 24rpx;
}

.post-container .actions {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.post-container .actions .share {
  width: 40rpx;
  height: 40rpx;
}

/* post-model-container */

.post-model .header-button {
  padding: 30rpx 20rpx;
}

.post-model .wrapper {
  width: 100%;
  font-size: 30rpx;
  color: #737273;
  padding: 16rpx 0;
  background: #f5f5f5;
  border-radius: 62rpx;
}

.post-model .wrapper>.post {
  margin-left: 30rpx;
  /* padding: 20rpx 0; */
}