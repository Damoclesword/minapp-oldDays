.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}

.lg_title {
  font-weight: 600;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.header > image {
  width: 200rpx;
  height: 300rpx;
  border-radius: 4rpx;
  box-shadow: 2px 3px 5px #f0f0f0;
  flex-shrink: 0;
}

.header > .main {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

.main > .title {
  font-size: 44rpx;
  font-weight: 600;
}

.main > .infomation {
  font-size: 20rpx;
  margin-top: 16rpx;
}

.summary {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.summary > .main {
  font-size: 28rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 5;
  -webkit-box-orient: vertical;
  text-indent: 56rpx;
}

.comments {
  margin-top: 20rpx;
}

.comments > .main {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.comments c-tag {
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.comments > .main > c-tag:nth-child(1) > view {
  background: #fefae0;
}

.comments > .main > c-tag:nth-child(2) > view {
  background: #f1fafe;
}

.comments .fav_nums {
  font-size: 22rpx;
  margin-left: 16rpx;
  color: #bbbbbb;
}
