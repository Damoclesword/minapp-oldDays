.container {
  height: 100%;
  background: #f9f9f9;
}

.header {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  box-shadow: 2px 3px 5px #f0f0f0;
}

.header .header-image {
  width: 100%;
  height: 100%;
}

.header .header-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  position: absolute;
  bottom: 0;
  width: 750rpx;
  height: 200rpx;
  background: #fff;
  z-index: 10;
}

.header .header-wrapper::before {
  position: absolute;
  content: "";
  width: 0;
  height: 0;
  top: -118rpx;
  border-top: 120rpx solid transparent;
  border-right: 750rpx solid #fff;
}

.unauthorized-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #f9f9f9;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.unauthorized-wrapper text {
  font-size: 24rpx;
  /* color: #fff; */
}

.user-info {
  position: absolute;
  top: -120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}

.user-info .name {
  margin-top: 10rpx;
  font-size: 36rpx;
}

.items-wrapper {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.items-wrapper .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: baseline;
  margin: 20rpx;
}

.items-wrapper .item image {
  width: 40rpx;
  height: 40rpx;
}

.items-wrapper .item .text-exp {
  font-size: 26rpx;
  color: #b3b3b3;
  margin-top: 10rpx;
}

.items-wrapper .item .text-data {
  font-size: 40rpx;
  line-height: 40rpx;
}
